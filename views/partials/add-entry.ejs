<!-- ADD ENTRY -->
<main class="ui modal site-content summary">
    <!-- DATE -->
    <h3 id="display-date" class="heading"></h3>
    <div id="mood-states" class="ui grid">
      <div class="five column row">
        <div class="column">
          <button
            id="depressed"
            class="mood"
            data-mood="depressed"
            data-color="#5C8B93"
            value="1"
          ></button>
          <p class="mood-text">depressed</p>
        </div>
        <div class="column">
          <button
            id="sad"
            class="mood"
            data-mood="sad"
            data-color="#76B3BE"
            value="2"
          ></button>
          <p class="mood-text">sad</p>
        </div>
        <div class="column">
          <button
            id="moderate"
            class="mood"
            data-mood="moderate"
            data-color="#8FDAE7"
            value="3"
          ></button>
          <p class="mood-text">moderate</p>
        </div>
        <div class="column">
          <button
            id="happy"
            class="mood"
            data-mood="happy"
            data-color="#A3E0EB"
            value="4"
          ></button>
          <p class="mood-text">happy</p>
        </div>
        <div class="column">
          <button
            id="exhilirated"
            class="mood"
            data-mood="exhilirated"
            data-color="#C1EAF1"
            value="5"
          ></button>
          <p class="mood-text">exhilirated</p>
        </div>
      </div>
    </div>

    <hr />
    <!-- QUESTION ANSWERS -->
    <div id="question-answers">
        <div class="eight wide column">
          <p id="questionA" class="question"></p>
          <button
            id="answer-1A"
            class="answer-opt-1"
            data-text="I feel hopeless all the time."
          ></button>
          <button
            id="answer-2A"
            class="answer-opt-1"
            data-text="I feel hopeless sometimes."
          ></button>
          <button
            id="answer-3A"
            class="answer-opt-1"
            data-text="I feel hopeful."
          ></button>
        </div>
        <div class="eight wide column">
          <p id="questionB" class="question"></p>
          <button
            id="answer-1B"
            class="answer-opt-2"
            data-text="I have trouble falling asleep."
          ></button>
          <button
            id="answer-2B"
            class="answer-opt-2"
            data-text="I keep waking up at night."
          ></button>
          <button
            id="answer-3B"
            class="answer-opt-2"
            data-text="My sleeping habits are normal."
          ></button>
        </div>
        <div class="eight wide column">
          <p id="questionC" class="question"></p>
          <button
            id="answer-1C"
            class="answer-opt-3"
            data-text="I am productive."
          ></button>
          <button
            id="answer-2C"
            class="answer-opt-3"
            data-text="I only complete necessary tasks."
          ></button>
          <button
            id="answer-3C"
            class="answer-opt-3"
            data-text="I have trouble leaving the house."
          ></button>
        </div>
      </div>
    </div>

    <hr />

    <!-- COMMENTS -->
    <div id="display-comments">
      <div class="ui form">
        <div class="field">
          <h3 class="heading">Additional Comments:</h3>
          <div class="ui grid">
            <div class="fourteen wide column">
              <textarea id="userComment"></textarea>
            </div>
            <div class="two wide column btn-col">
              <a id="add-comment"><i class="plus square icon"></i></a>
            </div>
          </div>
          <div class="btn-right">
            <button method="POST" type="submit" id="continue-btn" class="modal-btn">
              Continue
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>